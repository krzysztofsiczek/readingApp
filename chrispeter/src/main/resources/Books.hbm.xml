<hibernate-mapping>
	<class name="readingProject.Books" table="BOOKS">
		<id name="bookId" type="int">
			<column name="BOOKID" />
			<generator class="increment" />
		</id>
		<property name="bookTitle" type="java.lang.String">
			<column name="BOOKTITLE" />
		</property>
		<property name="bookAuthor" type="java.lang.String">
			<column name="BOOKAUTHOR" />
		</property>
		<property name="genre" type="java.lang.String">
			<column name="GENRE" />
		</property>
		<property name="publicationYear" type="int">
			<column name="PUBLICATIONYEAR" />
		</property>
		<set name="interactions" cascade="save-update" table="INTERACTIONS">
			<key>
				<column name="BOOKID" not-null="true" />
			</key>
			<one-to-many class="readingProject.Interactions" />
		</set>
	</class>
</hibernate-mapping>